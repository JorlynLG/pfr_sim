<?xml version="1.0" ?>
<sdf version="1.8">
    <world name="acorn">
        <physics name="1ms" type="ignored">
            <max_step_size>0.001</max_step_size>
            <real_time_factor>1.0</real_time_factor>
        </physics>
        <plugin
            filename="gz-sim-physics-system"
            name="gz::sim::systems::Physics">
        </plugin>
        <plugin
            filename="gz-sim-user-commands-system"
            name="gz::sim::systems::UserCommands">
        </plugin>
        <plugin
            filename="gz-sim-scene-broadcaster-system"
            name="gz::sim::systems::SceneBroadcaster">
        </plugin>

        <light type="directional" name="sun">
            <cast_shadows>true</cast_shadows>
            <pose>0 0 10 0 0 0</pose>
            <diffuse>0.8 0.8 0.8 1</diffuse>
            <specular>0.2 0.2 0.2 1</specular>
            <attenuation>
                <range>1000</range>
                <constant>0.9</constant>
                <linear>0.01</linear>
                <quadratic>0.001</quadratic>
            </attenuation>
            <direction>-0.5 0.1 -0.9</direction>
        </light>

        <model name="ground_plane">
            <static>true</static>
            <link name="link">
                <collision name="collision">
                <geometry>
                    <plane>
                    <normal>0 0 1</normal>
                    </plane>
                </geometry>
                </collision>
                <visual name="visual">
                <geometry>
                    <plane>
                    <normal>0 0 1</normal>
                    <size>100 100</size>
                    </plane>
                </geometry>
                <material>
                    <ambient>0.8 0.8 0.8 1</ambient>
                    <diffuse>0.8 0.8 0.8 1</diffuse>
                    <specular>0.8 0.8 0.8 1</specular>
                </material>
                </visual>
            </link>
        </model>

        <model name='Acorn' canonical_link='chassis'>
            <pose relative_to='world'>0 0 0 0 0 0</pose>   <!--the pose is relative to the world by default-->

            <link name='chassis'>
                <pose relative_to='__model__'>0 0 1 0 0 0</pose>
                <inertial> <!--inertial properties of the link mass, inertia matix-->
                    <mass>34.6</mass>
                    <inertia>
                        <ixx>3.053</ixx>
                        <ixy>0.00085</ixy>
                        <ixz>-3.19e-16</ixz>
                        <iyy>1.626</iyy>
                        <iyz>-3.69e-16</iyz>
                        <izz>4.51</izz>
                    </inertia>
                </inertial>
                <visual name='visual'>
                    <geometry>
                        <mesh>
                            <uri>meshes/acorn_frame.stl</uri>
                        </mesh>
                    </geometry>
                    <!--let's add color to our link-->
                    <material>
                        <ambient>0.2 0.2 0.2 1</ambient>
                        <diffuse>0.6 0.6 0.6 1</diffuse>
                        <specular>0.9 0.9 0.9 1</specular>
                        <emissive>0.0 0.0 0.0 1</emissive>
                    </material>
                </visual>
                <collision name='collision'> <!--todo: describe why we need the collision-->
                    <geometry>
                        <mesh>
                            <uri>meshes/acorn_frame.stl</uri>
                        </mesh>
                    </geometry>
                </collision>
            </link>

            <!--Build left fork-->
            <link name='left_fork'>
                <pose relative_to="chassis">0.802 0.8 -0.18 1.571 0 0</pose> <!--angles are in radian-->
                <inertial>
                    <mass>1.126</mass>
                    <pose> -2.744e-4 0.005 -0.007 0 0 0 </pose> <!-- Center of mass -->
                    <inertia>
                        <ixx>0.007</ixx>
                        <ixy>1.449e-5</ixy>
                        <ixz>4.489e-6</ixz>
                        <iyy>0.006</iyy>
                        <iyz>-0.001</iyz>
                        <izz>0.009</izz>
                    </inertia> <!-- Inertia tensor -->
                </inertial>
                <visual name='visual'>
                    <geometry>
                        <mesh>
                            <uri>meshes/acorn_fork.stl</uri>
                        </mesh>
                    </geometry>
                    <material>
                        <ambient>0.0 0.3 0.0 1.0</ambient> <!-- Darker green -->
                        <diffuse>0.0 0.5 0.0 1.0</diffuse> <!-- Medium green -->
                        <specular>0.2 0.2 0.2 1.0</specular> <!-- Darker gray, for metallic sheen -->
                    </material>
                </visual>
                <collision name='collision'>
                    <geometry>
                        <mesh>
                            <uri>meshes/acorn_fork.stl</uri>
                        </mesh>
                    </geometry>
                </collision>
            </link>

            <!--Build Right fork-->
            <link name='right_fork'>
                <pose relative_to="chassis">-0.802 0.8 -0.18 1.571 0 0</pose> <!--angles are in radian-->
                <inertial>
                    <mass>1.126</mass>
                    <pose> -2.744e-4 0.005 -0.007 0 0 0 </pose> <!-- Center of mass -->
                    <inertia>
                        <ixx>0.007</ixx>
                        <ixy>1.449e-5</ixy>
                        <ixz>4.489e-6</ixz>
                        <iyy>0.006</iyy>
                        <iyz>-0.001</iyz>
                        <izz>0.009</izz>
                    </inertia> <!-- Inertia tensor -->
                </inertial>
                <visual name='visual'>
                    <geometry>
                        <mesh>
                            <uri>meshes/acorn_fork.stl</uri>
                        </mesh>
                    </geometry>
                    <material>
                        <ambient>0.0 0.3 0.0 1.0</ambient> <!-- Darker green -->
                        <diffuse>0.0 0.5 0.0 1.0</diffuse> <!-- Medium green -->
                        <specular>0.2 0.2 0.2 1.0</specular> <!-- Darker gray, for metallic sheen -->
                    </material>
                </visual>
                <collision name='collision'>
                    <geometry>
                        <mesh>
                            <uri>meshes/acorn_fork.stl</uri>
                        </mesh>
                    </geometry>
                </collision>
            </link>

            <!--Build left back fork-->
            <link name='left_back_fork'>
                <pose relative_to="chassis">0.802 -0.8 -0.18 1.571 0 0</pose> <!--angles are in radian-->
                <inertial>
                    <mass>1.126</mass>
                    <pose> -2.744e-4 0.005 -0.007 0 0 0 </pose> <!-- Center of mass -->
                    <inertia>
                        <ixx>0.007</ixx>
                        <ixy>1.449e-5</ixy>
                        <ixz>4.489e-6</ixz>
                        <iyy>0.006</iyy>
                        <iyz>-0.001</iyz>
                        <izz>0.009</izz>
                    </inertia> <!-- Inertia tensor -->
                </inertial>
                <visual name='visual'>
                    <geometry>
                        <mesh>
                            <uri>meshes/acorn_fork.stl</uri>
                        </mesh>
                    </geometry>
                    <material>
                        <ambient>0.0 0.3 0.0 1.0</ambient> <!-- Darker green -->
                        <diffuse>0.0 0.5 0.0 1.0</diffuse> <!-- Medium green -->
                        <specular>0.2 0.2 0.2 1.0</specular> <!-- Darker gray, for metallic sheen -->
                    </material>
                </visual>
                <collision name='collision'>
                    <geometry>
                        <mesh>
                            <uri>meshes/acorn_fork.stl</uri>
                        </mesh>
                    </geometry>
                </collision>
            </link>

            <!--Build Right back fork-->
            <link name='right_back_fork'>
                <pose relative_to="chassis">-0.802 -0.8 -0.18 1.571 0 0</pose> <!--angles are in radian-->
                <inertial>
                    <mass>1.126</mass>
                    <pose> -2.744e-4 0.005 -0.007 0 0 0 </pose> <!-- Center of mass -->
                    <inertia>
                        <ixx>0.007</ixx>
                        <ixy>1.449e-5</ixy>
                        <ixz>4.489e-6</ixz>
                        <iyy>0.006</iyy>
                        <iyz>-0.001</iyz>
                        <izz>0.009</izz>
                    </inertia> <!-- Inertia tensor -->
                </inertial>
                <visual name='visual'>
                    <geometry>
                        <mesh>
                            <uri>meshes/acorn_fork.stl</uri>
                        </mesh>
                    </geometry>
                    <material>
                        <ambient>0.0 0.3 0.0 1.0</ambient> <!-- Darker green -->
                        <diffuse>0.0 0.5 0.0 1.0</diffuse> <!-- Medium green -->
                        <specular>0.2 0.2 0.2 1.0</specular> <!-- Darker gray, for metallic sheen -->
                    </material>
                </visual>
                <collision name='collision'>
                    <geometry>
                        <mesh>
                            <uri>meshes/acorn_fork.stl</uri>
                        </mesh>
                    </geometry>
                </collision>
            </link>


            <!--Build left wheel-->
            <link name='left_wheel'>
                <pose relative_to="left_fork">0 -0.469 0 1.571 0 0</pose> <!--angles are in radian-->
                <inertial>
                    <mass>6.853</mass>
                    <pose>0 0 0 0 0 0</pose> <!-- Center of mass (if not provided) -->
                    <inertia>
                        <ixx>0.305</ixx>
                        <ixy>0.0</ixy>
                        <ixz>0.0</ixz>
                        <iyy>0.153</iyy>
                        <iyz>0.0</iyz>
                        <izz>0.153</izz>
                    </inertia>
                </inertial>
                <visual name='visual'>
                    <geometry>
                        <mesh>
                            <uri>meshes/acorn_wheel.stl</uri>
                        </mesh>
                    </geometry>
                    <material>
                        <ambient>0.1 0.1 0.1 1.0</ambient> <!-- Dark gray for rubber -->
                        <diffuse>0.2 0.2 0.2 1.0</diffuse> <!-- Slightly lighter gray -->
                        <specular>0.0 0.0 0.0 1.0</specular> <!-- No specular reflection, matte finish -->
                    </material>
                </visual>
                <collision name='collision'>
                    <geometry>
                        <mesh>
                            <uri>meshes/acorn_wheel.stl</uri>
                        </mesh>
                    </geometry>
                </collision>
            </link>

            <!--Build right wheel-->
            <link name='right_wheel'>
                <pose relative_to="right_fork">0 -0.469 0 1.571 0 0</pose> <!--angles are in radian-->
                <inertial>
                    <mass>6.853</mass>
                    <pose>0 0 0 0 0 0</pose> <!-- Center of mass (if not provided) -->
                    <inertia>
                        <ixx>0.305</ixx>
                        <ixy>0.0</ixy>
                        <ixz>0.0</ixz>
                        <iyy>0.153</iyy>
                        <iyz>0.0</iyz>
                        <izz>0.153</izz>
                    </inertia>
                </inertial>
                <visual name='visual'>
                    <geometry>
                        <mesh>
                            <uri>meshes/acorn_wheel.stl</uri>
                        </mesh>
                    </geometry>
                    <material>
                        <ambient>0.1 0.1 0.1 1.0</ambient> <!-- Dark gray for rubber -->
                        <diffuse>0.2 0.2 0.2 1.0</diffuse> <!-- Slightly lighter gray -->
                        <specular>0.0 0.0 0.0 1.0</specular> <!-- No specular reflection, matte finish -->
                    </material>
                </visual>
                <collision name='collision'>
                    <geometry>
                        <mesh>
                            <uri>meshes/acorn_wheel.stl</uri>
                        </mesh>
                    </geometry>
                </collision>
            </link>


            <!--Build left back wheel-->
            <link name='left_back_wheel'>
                <pose relative_to="left_back_fork">0 -0.469 0 1.571 0 0</pose> <!--angles are in radian-->
                <inertial>
                    <mass>6.853</mass>
                    <pose>0 0 0 0 0 0</pose> <!-- Center of mass (if not provided) -->
                    <inertia>
                        <ixx>0.305</ixx>
                        <ixy>0.0</ixy>
                        <ixz>0.0</ixz>
                        <iyy>0.153</iyy>
                        <iyz>0.0</iyz>
                        <izz>0.153</izz>
                    </inertia>
                </inertial>
                <visual name='visual'>
                    <geometry>
                        <mesh>
                            <uri>meshes/acorn_wheel.stl</uri>
                        </mesh>
                    </geometry>
                    <material>
                        <ambient>0.1 0.1 0.1 1.0</ambient> <!-- Dark gray for rubber -->
                        <diffuse>0.2 0.2 0.2 1.0</diffuse> <!-- Slightly lighter gray -->
                        <specular>0.0 0.0 0.0 1.0</specular> <!-- No specular reflection, matte finish -->
                    </material>
                </visual>
                <collision name='collision'>
                    <geometry>
                        <mesh>
                            <uri>meshes/acorn_wheel.stl</uri>
                        </mesh>
                    </geometry>
                </collision>
            </link>

            <!--Build right back wheel-->
            <link name='right_back_wheel'>
                <pose relative_to="right_back_fork">0 -0.469 0 1.571 0 0</pose> <!--angles are in radian-->
                <inertial>
                    <mass>6.853</mass>
                    <pose>0 0 0 0 0 0</pose> <!-- Center of mass (if not provided) -->
                    <inertia>
                        <ixx>0.305</ixx>
                        <ixy>0.0</ixy>
                        <ixz>0.0</ixz>
                        <iyy>0.153</iyy>
                        <iyz>0.0</iyz>
                        <izz>0.153</izz>
                    </inertia>
                </inertial>
                <visual name='visual'>
                    <geometry>
                        <mesh>
                            <uri>meshes/acorn_wheel.stl</uri>
                        </mesh>
                    </geometry>
                    <material>
                        <ambient>0.1 0.1 0.1 1.0</ambient> <!-- Dark gray for rubber -->
                        <diffuse>0.2 0.2 0.2 1.0</diffuse> <!-- Slightly lighter gray -->
                        <specular>0.0 0.0 0.0 1.0</specular> <!-- No specular reflection, matte finish -->
                    </material>
                </visual>
                <collision name='collision'>
                    <geometry>
                        <mesh>
                            <uri>meshes/acorn_wheel.stl</uri>
                        </mesh>
                    </geometry>
                </collision>
            </link>

            <frame name="caster_frame" attached_to='chassis'>
                <pose>0 -0.9 -0.4 0 0 0</pose>
            </frame>

            <!--caster wheel-->
            <link name='caster'>
                <pose relative_to='caster_frame'/>
                <inertial>
                    <mass>1</mass>
                    <inertia>
                        <ixx>0.1</ixx>
                        <ixy>0</ixy>
                        <ixz>0</ixz>
                        <iyy>0.1</iyy>
                        <iyz>0</iyz>
                        <izz>0.1</izz>
                    </inertia>
                </inertial>
                <visual name='visual'>
                    <geometry>
                        <sphere>
                            <radius>0.6</radius>
                        </sphere>
                    </geometry>
                    <material>
                        <ambient>0.0 1 0.0 1</ambient>
                        <diffuse>0.0 1 0.0 1</diffuse>
                        <specular>0.0 1 0.0 1</specular>
                    </material>
                </visual>
                <collision name='collision'>
                    <geometry>
                        <sphere>
                            <radius>0.6</radius>
                        </sphere>
                    </geometry>
                </collision>
            </link>


            <!--Joints-->

            <!--different type of joints ball joint--> <!--defult value is the child-->
            <joint name='caster_wheel' type='ball'>
                <parent>chassis</parent>
                <child>caster</child>
            </joint>

            <joint name='left_fork_joint' type='fixed'> <!--continous joint is not supported yet-->
                <pose relative_to='left_fork'/>
                <parent>chassis</parent>
                <child>left_fork</child>
                <axis>
                    <xyz expressed_in='__model__'>0 1 0</xyz> <!--can be defined as any frame or even arbitrary frames-->
                    <limit>
                        <lower>-1.79769e+308</lower>    <!--negative infinity-->
                        <upper>1.79769e+308</upper>     <!--positive infinity-->
                    </limit>
                </axis>
            </joint>

            <joint name='right_fork_joint' type='fixed'>
                <pose relative_to='right_fork'/>
                <parent>chassis</parent>
                <child>right_fork</child>
                <axis>
                    <xyz expressed_in='__model__'>0 1 0</xyz>
                    <limit>
                        <lower>-1.79769e+308</lower>    <!--negative infinity-->
                        <upper>1.79769e+308</upper>     <!--positive infinity-->
                    </limit>
                </axis>
            </joint>

            <joint name='left_wheel_joint' type='revolute'> 
                <pose relative_to='left_wheel'/>
                <parent>left_fork</parent>
                <child>left_wheel</child>
                <axis>
                    <xyz expressed_in='__model__'>1 0 0</xyz>
                    <limit>
                        <lower>-1.79769e+308</lower>  
                        <upper>1.79769e+308</upper> 
                    </limit>
                </axis>
            </joint>

            <joint name='right_wheel_joint' type='revolute'>
                <pose relative_to='right_wheel'/>
                <parent>right_fork</parent>
                <child>right_wheel</child>
                <axis>
                    <xyz expressed_in='__model__'>1 0 0</xyz>
                    <limit>
                        <lower>-1.79769e+308</lower> 
                        <upper>1.79769e+308</upper>  
                    </limit>
                </axis>
            </joint>

            <joint name='left_back_fork_joint' type='fixed'> <!--continous joint is not supported yet-->
                <pose relative_to='left_back_fork'/>
                <parent>chassis</parent>
                <child>left_back_fork</child>
                <axis>
                    <xyz expressed_in='__model__'>0 1 0</xyz> <!--can be defined as any frame or even arbitrary frames-->
                    <limit>
                        <lower>-1.79769e+308</lower>    <!--negative infinity-->
                        <upper>1.79769e+308</upper>     <!--positive infinity-->
                    </limit>
                </axis>
            </joint>

            <joint name='right_back_fork_joint' type='fixed'>
                <pose relative_to='right_back_fork'/>
                <parent>chassis</parent>
                <child>right_back_fork</child>
                <axis>
                    <xyz expressed_in='__model__'>0 1 0</xyz>
                    <limit>
                        <lower>-1.79769e+308</lower>    <!--negative infinity-->
                        <upper>1.79769e+308</upper>     <!--positive infinity-->
                    </limit>
                </axis>
            </joint>

            <joint name='left_back_wheel_joint' type='revolute'> 
                <pose relative_to='left_back_wheel'/>
                <parent>left_back_fork</parent>
                <child>left_back_wheel</child>
                <axis>
                    <xyz expressed_in='__model__'>1 0 0</xyz>
                    <limit>
                        <lower>-1.79769e+308</lower>  
                        <upper>1.79769e+308</upper> 
                    </limit>
                </axis>
            </joint>

            <joint name='right_back_wheel_joint' type='revolute'>
                <pose relative_to='right_back_wheel'/>
                <parent>right_back_fork</parent>
                <child>right_back_wheel</child>
                <axis>
                    <xyz expressed_in='__model__'>1 0 0</xyz>
                    <limit>
                        <lower>-1.79769e+308</lower> 
                        <upper>1.79769e+308</upper>  
                    </limit>
                </axis>
            </joint>  

            <!-- Connect left back wheel to left wheel -->
            <joint name='left_back_wheel_joint2' type='fixed'>
                <pose relative_to='left_back_fork'/>
                <parent>left_fork</parent>
                <child>left_back_wheel</child>
                <axis>
                    <xyz expressed_in='__model__'>0 0 1</xyz> <!-- This ensures both wheels rotate together -->
                    <limit>
                        <lower>-1.79769e+308</lower>  <!-- negative infinity -->
                        <upper>1.79769e+308</upper>   <!-- positive infinity -->
                    </limit>
                </axis>
            </joint>

            <!-- Connect right back wheel to right wheel -->
            <joint name='right_back_wheel_joint2' type='fixed'>
                <pose relative_to='right_back_fork'/>
                <parent>right_fork</parent>
                <child>right_back_wheel</child>
                <axis>
                    <xyz expressed_in='__model__'>0 0 1</xyz> <!-- This ensures both wheels rotate together -->
                    <limit>
                        <lower>-1.79769e+308</lower>  <!-- negative infinity -->
                        <upper>1.79769e+308</upper>   <!-- positive infinity -->
                    </limit>
                </axis>
            </joint>

            <!--diff drive plugin-->
            <plugin
                filename="gz-sim-diff-drive-system"
                name="gz::sim::systems::DiffDrive">
                <left_joint>left_wheel_joint</left_joint>
                <right_joint>right_wheel_joint</right_joint>
                <wheel_separation>1.56</wheel_separation>
                <wheel_radius>0.264</wheel_radius>
                <odom_publish_frequency>1</odom_publish_frequency>
                <topic>cmd_vel</topic>
            </plugin>

        </model>

        <!-- Moving Left-->
        <plugin filename="gz-sim-triggered-publisher-system"
                name="gz::sim::systems::TriggeredPublisher">
            <input type="gz.msgs.Int32" topic="/keyboard/keypress">
                <match field="data">16777234</match>
            </input>
            <output type="gz.msgs.Twist" topic="/cmd_vel">
                linear: {x: 0.0}, angular: {z: 0.5}
            </output>
        </plugin>
        <!-- Moving Forward-->
        <plugin filename="gz-sim-triggered-publisher-system"
                name="gz::sim::systems::TriggeredPublisher">
            <input type="gz.msgs.Int32" topic="/keyboard/keypress">
                <match field="data">16777235</match>
            </input>
            <output type="gz.msgs.Twist" topic="/cmd_vel">
                linear: {x: 0.5}, angular: {z: 0.0}
            </output>
        </plugin>
        <!-- Moving Right-->
        <plugin filename="gz-sim-triggered-publisher-system"
                name="gz::sim::systems::TriggeredPublisher">
            <input type="gz.msgs.Int32" topic="/keyboard/keypress">
                <match field="data">16777236</match>
            </input>
            <output type="gz.msgs.Twist" topic="/cmd_vel">
                linear: {x: 0.0}, angular: {z: -0.5}
            </output>
        </plugin>
        <!-- Moving Backward-->
        <plugin filename="gz-sim-triggered-publisher-system"
                name="gz::sim::systems::TriggeredPublisher">
            <input type="gz.msgs.Int32" topic="/keyboard/keypress">
                <match field="data">16777237</match>
            </input>
            <output type="gz.msgs.Twist" topic="/cmd_vel">
                linear: {x: -0.5}, angular: {z: 0.0}
            </output>
        </plugin>        

    </world>
</sdf>