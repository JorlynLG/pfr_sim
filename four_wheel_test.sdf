<?xml version="1.0"?>
<sdf version="1.6">
  <model name="simple_diff_drive">
    <pose>0 0 0 0 0 0</pose>

    <!-- Chassis -->
    <link name="chassis">
      <pose>0 0 0 0 0 0</pose>
      <collision name="chassis_collision">
        <geometry>
          <box>
            <size>1 0.5 0.3</size>
          </box>
        </geometry>
      </collision>
      <visual name="chassis_visual">
        <geometry>
          <box>
            <size>1 0.5 0.3</size>
          </box>
        </geometry>
        <material>
          <ambient>1 0 0 1</ambient>
          <diffuse>1 0 0 1</diffuse>
        </material>
      </visual>
    </link>

    <!-- Left Wheels -->
    <link name="left_wheel">
      <pose>0.5 -0.25 0.1 0 0 0</pose>
      <collision name="left_wheel_collision">
        <geometry>
          <cylinder>
            <radius>0.1</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
      </collision>
      <visual name="left_wheel_visual">
        <geometry>
          <cylinder>
            <radius>0.1</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0 1 0 1</ambient>
          <diffuse>0 1 0 1</diffuse>
        </material>
      </visual>
    </link>

    <link name="right_wheel">
      <pose>0.5 0.25 0.1 0 0 0</pose>
      <collision name="right_wheel_collision">
        <geometry>
          <cylinder>
            <radius>0.1</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
      </collision>
      <visual name="right_wheel_visual">
        <geometry>
          <cylinder>
            <radius>0.1</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0 0 1 1</ambient>
          <diffuse>0 0 1 1</diffuse>
        </material>
      </visual>
    </link>

    <!-- Right Wheels -->
    <link name="left_wheel_rear">
      <pose>-0.5 -0.25 0.1 0 0 0</pose>
      <collision name="left_wheel_rear_collision">
        <geometry>
          <cylinder>
            <radius>0.1</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
      </collision>
      <visual name="left_wheel_rear_visual">
        <geometry>
          <cylinder>
            <radius>0.1</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0 1 1 1</ambient>
          <diffuse>0 1 1 1</diffuse>
        </material>
      </visual>
    </link>

    <link name="right_wheel_rear">
      <pose>-0.5 0.25 0.1 0 0 0</pose>
      <collision name="right_wheel_rear_collision">
        <geometry>
          <cylinder>
            <radius>0.1</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
      </collision>
      <visual name="right_wheel_rear_visual">
        <geometry>
          <cylinder>
            <radius>0.1</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>1 1 0 1</ambient>
          <diffuse>1 1 0 1</diffuse>
        </material>
      </visual>
    </link>

    <!-- Joints -->
    <joint name="left_wheel_joint" type="revolute">
      <pose>0.5 -0.25 0.1 0 0 0</pose>
      <parent>chassis</parent>
      <child>left_wheel</child>
      <axis>
        <xyz>0 1 0</xyz>
      </axis>
      <limit>
        <lower>-10</lower>
        <upper>10</upper>
      </limit>
    </joint>

    <joint name="right_wheel_joint" type="revolute">
      <pose>0.5 0.25 0.1 0 0 0</pose>
      <parent>chassis</parent>
      <child>right_wheel</child>
      <axis>
        <xyz>0 1 0</xyz>
      </axis>
      <limit>
        <lower>-10</lower>
        <upper>10</upper>
      </limit>
    </joint>

    <joint name="left_wheel_rear_joint" type="revolute">
      <pose>-0.5 -0.25 0.1 0 0 0</pose>
      <parent>chassis</parent>
      <child>left_wheel_rear</child>
      <axis>
        <xyz>0 1 0</xyz>
      </axis>
      <limit>
        <lower>-10</lower>
        <upper>10</upper>
      </limit>
    </joint>

    <joint name="right_wheel_rear_joint" type="revolute">
      <pose>-0.5 0.25 0.1 0 0 0</pose>
      <parent>chassis</parent>
      <child>right_wheel_rear</child>
      <axis>
        <xyz>0 1 0</xyz>
      </axis>
      <limit>
        <lower>-10</lower>
        <upper>10</upper>
      </limit>
    </joint>

  </model>
</sdf>